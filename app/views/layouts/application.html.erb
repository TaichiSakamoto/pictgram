<!DOCTYPE html>
<html>
  <head>
    <title>Pictgram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
      <nav class="navgar navgar-default navgar-fixed-top navgar-transparent">
        <div class="container">
          <%= link_to root_path do %>
            <span><%= image_tag 'icons/logo.png', class: 'navgar-brand' %></span>
          <% end %>
          <ul class="nav navgar-nav navgar-right">
            <% if logged_in? %>
              <li>
                <%= link_to '/topics' do %>
                  <%= image_tag 'icons/heart.png' %>
                <% end %>
              </li>
              <li>
                <%= link_to new_topic_path do %>
                  <%= image_tag 'icons/camera.png' %>
                <% end %>
              </li>
              <li>
                <%= link_to logout_path, method: :delete do %>
                  <%= image_tag 'icons/logout.png' %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to new_user_path do %>
                  <%= image_tag 'icons/register.png' %>
                <% end %>
              </li>
              <li>
                <%= link_to login_path do %>
                  <%= image_tag 'icons/login.png' %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

    <%= yield %>
  </body>
</html>
